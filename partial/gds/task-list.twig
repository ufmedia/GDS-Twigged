<ul class="govuk-task-list">
    {% for task in tasks %}
    <li class="govuk-task-list__item govuk-task-list__item--with-link">
        <div class="govuk-task-list__name-and-hint">
            <a class="govuk-link govuk-task-list__link" href="{{ task.link }}" aria-describedby="{{ task.statusId }}">
                {{ task.name }}
            </a>
            {% if task.hint is defined %}
                <div id="{{ task.hintId }}" class="govuk-task-list__hint">
                    {{ task.hint }}
                </div>
            {% endif %}
        </div>
        <div class="govuk-task-list__status" id="{{ task.statusId }}">
            {{ task.status }}
        </div>
    </li>
    {% endfor %}
</ul>

